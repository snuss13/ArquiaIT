@model IEnumerable<ArquiaIT.Models.Business.Contact>
@using GridMvc.Html

@{
    ViewBag.Title = "Index";
}

<h4>Contactos</h4>

<p>
    @Html.ActionLink("Agregar Contacto", "Create", "Contacts", new { clientID = ViewData["clientID"] }, null)
</p>

<hr />
<div style="width:1000px;">
    @Html.Grid(Model).Columns(columns =>
    {
        columns.Add(c => c.Name).Titled("Nombre").Filterable(true);
        columns.Add(c => c.LastName).Titled("Apellido").Filterable(true);
        columns.Add(c => c.Area).Titled("Area").Filterable(true);
        columns.Add(c => c.TelephoneNumber).Titled("Núm. Teléfono");
        columns.Add(c => c.InternNumber).Titled("Interno");
        columns.Add(c => c.email).Titled("Email");
        columns.Add(c => c.Active).Titled("Activo").Filterable(true);
    }).WithPaging(50).Sortable(true)
</div>

<hr />
<p>
    <div>
        @Html.ActionLink("Volver", "Administration", "Home")
    </div>
</p>

