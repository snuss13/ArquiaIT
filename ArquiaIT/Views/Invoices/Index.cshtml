@model IEnumerable<ArquiaIT.Models.Business.Invoice>

@{
    ViewBag.Title = "Index";
}

<h2>Facturas</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.Label("Número Fact")
        </th>
        <th>
            @Html.Label("Fecha")
        </th>

        <th>
            @Html.Label("Valor AR$")
        </th>
        <th>
            @Html.Label("Valor U$D")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IVA)
        </th>
        <th>
            @Html.Label("Cambio")
        </th>
        <th>
            @Html.Label("Total")
        </th>
        <th>
            @Html.Label("Fecha Pago")
        </th>
        <th>
            @Html.Label("Categoría")
        </th>
        <th>
            @Html.Label("Orden de Compra")
        </th>
        <th>
            @Html.Label("Estado")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InvoiceNumber)
        </td>
        <td>
            @String.Format("{0:dd/MM/yyyy}", item.InvoiceDate)
        </td>
        <td>
            @String.Format("{0:c}", item.ValueInPesos)
        </td>
        <td>
            @String.Format("{0:c}", item.ValueInDollars)
        </td>
        <td>
            @String.Format("{0:c}", item.IVA)
        </td>
        <td>
            @String.Format("{0:c}", item.ChangeRate)
        </td>
        <td>
            @String.Format("{0:c}", item.InvoiceTotal)
        </td>
        <td>
            @String.Format("{0:dd/MM/yyyy}", item.PayDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvoiceCategory.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PurchaseOrderLine.PurchaseOrder.PONumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvoiceStatus.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
