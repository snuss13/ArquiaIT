@model ArquiaIT.Models.Business.PurchaseOrder

@{
    ViewBag.Title = "Edit";
}

<h2>Orden de Compra</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Edici&oacute;n</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @Html.Partial("~/Views/Clients/ClientPartial.cshtml", Model)

        <div class="row">
            <div class="col-md-2">
                @Html.Label("Orden Compra", htmlAttributes: new { @class = "control -label" })
            </div>
            <div class="col-md-4">
                @if (this.User.IsInRole("Administrator"))
                {
                    @Html.EditorFor(model => model.PONumber, new { htmlAttributes = new { @class = "form-control" } })
                }
                else
                {
                    @Html.EditorFor(model => model.PONumber, new { htmlAttributes = new { @class = "form-control", disabled = "true" } })
                }
                @Html.ValidationMessageFor(model => model.PONumber, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Html.Label("Fecha", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-4">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                &nbsp;
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                @Html.Label("Dolar", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-4">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsDolar)
                    @Html.ValidationMessageFor(model => model.IsDolar, "", new { @class = "text-danger" })
                </div>
            </div>
            @*<div id="ChangeRateDiv" style="display:none">*@
            <div class="col-md-2">
                @Html.Label("Cambio del día", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-4">
                @Html.EditorFor(model => model.ChangeRate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ChangeRate, "", new { @class = "text-danger" })
            </div>
            @*</div>*@
        </div>

        <div class="row">
            <div class="col-md-12">
                &nbsp;
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                @Html.Label("Total Orden de Compra", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-4">
                <input type="text" value="@String.Format("{0:c}", Model.POTotal)" class="form-control" disabled/>
            </div>
        </div>

        <hr />
        <div class="row">
            <div class="col-md-12">
                &nbsp;
            </div>
        </div>

         @Html.Partial("~/Views/PurchaseOrderLines/Index.cshtml", Model)

        <hr />
        <div class="row">
            <div class="col-md-12">
                &nbsp;
            </div>
        </div>
        <div class="row">
            <div class="col-md-1">
                <input type="submit" value="Actualizar" class="btn btn-default" />
            </div>
            <div class="col-md-10">
                @Html.ActionLink("Volver", "Index")
            </div>
        </div>
    </div>


<script>
        $("#Date").datepicker(
            {
                format: 'dd/mm/yyyy'
            });

        $('#IsDolar').change(function () {
            this.checked ? $("#ChangeRateDiv").show() : $("#ChangeRateDiv").hide() ;
        });

        $(document).ready(function () {
            $('#IsDolar').is(':checked') ? $("#ChangeRateDiv").show() : $("#ChangeRateDiv").hide();
        });
</script>
}