@model ArquiaIT.Models.Business.PurchaseOrder

<div class="form-horizontal">
    <h4>Detalle de Orden de Compra</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    @Html.Partial("~/Views/Clients/ClientPartial.cshtml", Model)

    <div class="row">
        <div class="col-md-2">
            @Html.Label("Orden Compra", htmlAttributes: new { @class = "control -label" })
        </div>
        <div class="col-md-4">
            @Html.EditorFor(model => model.PONumber, new { htmlAttributes = new { @class = "form-control", disabled = "true" } })
            @Html.ValidationMessageFor(model => model.PONumber, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-2">
            @Html.Label("Fecha", htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-md-4">
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", disabled = "true" } })
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            &nbsp;
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            @Html.Label("Dolar", htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-md-4">
            <div class="checkbox">
                @Html.EditorFor(model => model.IsDolar, new { htmlAttributes = new { disabled = "true" } })
                @Html.ValidationMessageFor(model => model.IsDolar, "", new { @class = "text-danger" })
            </div>
        </div>
        @*<div id="ChangeRateDiv" style="display:none">*@
        <div class="col-md-2">
            @Html.Label("Cambio del día", htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-md-4">
            @Html.EditorFor(model => model.ChangeRate, new { htmlAttributes = new { @class = "form-control", disabled = "true" } })
            @Html.ValidationMessageFor(model => model.ChangeRate, "", new { @class = "text-danger" })
        </div>
        @*</div>*@
    </div>

    <div class="row">
        <div class="col-md-12">
            &nbsp;
        </div>
    </div>
</div>
