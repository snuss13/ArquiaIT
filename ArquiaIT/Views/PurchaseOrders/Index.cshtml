@model IEnumerable<ArquiaIT.Models.Business.PurchaseOrder>

@{
    ViewBag.Title = "Index";
}

<h2>Ordenes de Compra</h2>

<p>
    @Html.ActionLink("Nueva Orden de Compra", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Número")
        </th>
        <th>
            @Html.Label("Fecha")
        </th>
        <th>
            @Html.Label("Dolar")
        </th>
        <th>
            @Html.Label("Cambio")
        </th>
        <th>
            @Html.Label("Cliente")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PONumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDolar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChangeRate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Client.Name)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
