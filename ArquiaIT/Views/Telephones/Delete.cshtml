@model ArquiaIT.Models.Business.Telephone

@{
    ViewBag.Title = "Delete";
}

<h2>Teléfono</h2>

<div>
    <h4>Eliminar</h4>
    <hr />
    <p>
        <div class="Warning">
            ¿Est&aacute; seguro que desea eliminar este tipo de teléfono?
        </div>
    </p>

    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Número")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>

        <dt>
            @Html.Label("Tipo de Teléfono")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TelephoneType.Description)
        </dd>

        <dt>
            @Html.Label("Cliente")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Client.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver", "Edit", "Clients", new { id = Model.Client.Id }, null)
        </div>
    }
</div>
